rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() &&
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users
    match /users/{userId} {
      allow create: if signedIn() && request.auth.uid == userId;
      allow read, update, delete: if signedIn() && request.auth.uid == userId;

      // Admin access
      allow read, update, delete: if isAdmin();
    }

    // Cars
    match /cars/{carId} {
      // Public read so the app can browse cars.
      allow read: if true;

      // Admin-only writes
      allow create, update, delete: if isAdmin();
    }

    // Bookings
    match /bookings/{bookingId} {
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;

      // Owners can read their bookings; admins can read all.
      allow read: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);

      // Updates
      // - Admin: can update anything
      // - Owner: can either update payment fields OR cancel their own booking
      allow update: if isAdmin() || (
        signedIn() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.carId == resource.data.carId &&
        (
          // Payment update
          (
            // The app marks booking as completed after payment success.
            request.resource.data.diff(resource.data).changedKeys().hasOnly([
              'paymentId',
              'isPaid',
              'paymentStatus',
              'bookingStatus',
              'status',
              'userName',
              'userEmail',
              'billingDetails',
              'emailSendState',
              'updatedAt'
            ])
          )
          ||
          // Cancel booking (user)
          (
            request.resource.data.status == 'cancelled' &&
            request.resource.data.diff(resource.data).changedKeys().hasOnly([
              'status',
              'bookingStatus',
              'updatedAt',
              'adminNote'
            ])
          )
        )
      );

      allow delete: if isAdmin();
    }

    // Notifications saved by the app (not push delivery)
    match /notifications/{notificationId} {
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if signedIn() && resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAdmin();
    }
  }
}
